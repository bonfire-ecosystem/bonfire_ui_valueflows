<div :if={e(@location, :name, nil)} class="relative pt-4 text-sm text-gray-600">
   <div class="flex items-center justify-between mb-2">
    <span class="block text-sm font-semibold tracking-wide text-gray-500">Location</span>
  </div>
  <div class="p-2 bg-gray-200">
    <div class="text-sm text-gray-800 font-regular">{e(@location, :name, "")}</div>
    <div class="text-sm text-gray-600 font-regular">{if e(@location, :name, "") != e(@location, :mappable_address, ""), do: e(@location, :mappable_address, "")}</div>
  </div>
</div>
