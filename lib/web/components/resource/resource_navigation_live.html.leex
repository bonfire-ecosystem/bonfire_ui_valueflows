<nav
  role="tabpanel"
  class="my-4 pb-3 flex justify-between border-b-4"
  aria-label="Switch between resource page tabs">
    <%= for {route, item} <- Bonfire.Common.Config.get([:ui, :resource, :navigation], []) do %>
      <%= live_patch to: "/resource/" <>  e(@resource, :id, "") <> "/#{route}", class: "flex-1" do %>
        <div
          aria-current="<%= if @selected_tab == item, do: "page" %>"
          class="border-b-4 text-center capitalize text-gray-500 hover:text-gray-700 px-3 py-2 font-medium text-sm hover:border-b-4 border-gray-300 -mb-4 <%= if @selected_tab == item, do: "hover:text-pink-600 hover:border-pink-500 border-pink-500 text-pink-600 font-bold" %>">
          <%= item %>
        </div>
      <% end %>
    <% end %>
</nav>
